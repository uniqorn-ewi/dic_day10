<h1>ブログ詳細</h1>
<table class="blog_show_table">
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

  <tr>
    <td><%= @blog.id %></td>
    <td><%= @blog.title %></td>
    <td><%= @blog.content %></td>
  </tr>
</table>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p>著者：<%= @blog.user_id %></p>

<%= link_to "一覧へ戻る" , blogs_path %>